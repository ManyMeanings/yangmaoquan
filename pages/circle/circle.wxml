		<image class="search-img" src="/images/search.png"></image>
		<text class="search-text">搜索</text>
	</view>

	<view class="change-tag">
		<text class="recommend">推荐</text>
		<text class="new">最新</text>
	</view>

	<view class="product">
		<image class="product-img" src="/images/circle3.png"></image>
