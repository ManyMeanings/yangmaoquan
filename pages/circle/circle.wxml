<view class="container-self">
	<view class="background-color"></view>
	<view class="user-card">
		<view class="top">
			<view class="img-border">
				<open-data class="head" type="userAvatarUrl"></open-data>
			</view>
			<view class="box">
				<view class="first-line">
					<open-data type="userNickName" lang="zh_CN" class="name"></open-data>
					<view class="sign">
						<image class="sign-img" src="/images/sign.png"></image>
						<view class="sign-text">新手圈主</view>
					</view>
				</view>
				<text decode="true" class="change">&nbsp;&nbsp;圈子操作&nbsp;&nbsp;</text>
