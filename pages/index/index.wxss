/**index.wxss**/
.search {
  padding: 5rpx;
  width: 90%;
  height: 40rpx;
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.search-text {
  color: #bfbfbf;
  font-size: 25rpx;
  margin-left: 10rpx;
}
.search-img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.swiper {
  width: 92%;
  height: 250rpx;
  margin-top: 20rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.buttons {
  height: 150rpx;
  width: 92%;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.button {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.button-image {
  width: 80rpx;
  height: 80rpx;
}
.button-text {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.title {
  height: 50rpx;
  font-size: 30rpx;
  margin-right: auto;
  padding-left: 4%;
  width: 100%;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}
.icon {
  float: left;
  margin-right: 10rpx;
  height: 30rpx;
  width: 25rpx;
}
.recommend-text {
  float: left;
}
.go {
  float: right;
  padding-right: 60rpx;
  height: 20rpx;
  width: 18rpx;
}
.recommend {
  width: 92%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.circle {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  font-size: 25rpx;
}
.circle-img {
  height: 200rpx;
  width: 200rpx;
  border-radius: 5%;
}
.friends {
  color: red;
}
.news-items {
  width: 92%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.news-item {
  width: 48%;
  height: 500rpx;
  display: flex;
  align-items: left;
  justify-content: space-between;
  flex-direction: column;
}
.news-image {
  width: 320rpx;
  height: 300rpx;
  border-radius: 5%;
}
.news-title {
  font-size: 25rpx;
  color: #898694;
}
.money1 {
  font-size: 20rpx;
  color: #A79A99;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.money2 {
  font-size: 30rpx;
  color: red;
}
.buy-number {
  font-size: 25rpx;
  color: #A79A99;
}
.extra-msg2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}