/* pages/history/history.wxss */
.title {
  height: 50rpx;
  font-size: 30rpx;
  margin-right: auto;
  padding-left: 4%;
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.icon {
  float: left;
  margin-right: 10rpx;
  height: 30rpx;
  width: 25rpx;
  padding-top: 3rpx;
}

.title-text {
  font-size: 30rpx;
}

.search {
  width: 70%;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
}

.button {
  color: white;
  background-color: #f7660f;
  border: 0rpx;
  border-radius: 5%;
  font-weight: 400;
  padding: 10rpx 50rpx;
  margin-bottom: 20rpx;
}

.hint {
  display: flex;
  justify-content: space-between;
  width: 80%;
  height: 150rpx;
  position: relative;
  margin-bottom: 50rpx;
}

.step {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.step-img {
  width: 100rpx;
  height: 100rpx;
}

.step-hint {
  font-size: 25rpx;
}
.line {
  border: 1rpx solid #f7660f;
  height: 1rpx;
  position: absolute;
  width: 80%;
  top: 50rpx;
  left: 20%;
  z-index: -1;
}

.products-title {
  font-size: 35rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.first {
  color: #ee5940;
  text-decoration: underline;
}

.second {
  color: #ee5940;
  text-decoration: underline;
}

.product {
  width: 90%;
  height: 250rpx;
  display: flex;
  margin: 20rpx auto;
  justify-content: space-between;
}

.product-img {
  width: 250rpx;
  height: 250rpx;
  border-radius: 5%;
}

.product-msg {
  width: 60%;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
}

.money2 {
  font-size: 40rpx;
  color: red;
}
.friends {
  color: red;
  font-size: 25rpx;
}

.extra-msg {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-introduce {
  color: #a0a0a0;
}

.source {
  color: white;
  background-color: #ed482c;
  border-radius: 5%;
  width: fit-content;
  padding: 5rpx 25rpx;
}